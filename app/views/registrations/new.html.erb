<div class="container h-100">
  <div class="home-header row flex-column align-items-center pt-5">
    <%= image_tag asset_path('chat-2.svg') %>
    <h2 class="mt-2">MessageMe</h2> 
  </div>
  <div class="home-contents row flex-column align-items-center pt-5">
    <%= form_with scope: :user, url: registration_create_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.text_field :username, placeholder: 'Username', class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= form.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= form.submit 'Signup', class: 'btn btn-primary form-control' %>
      </div>
    <% end %>

    <%= link_to 'Already have an account?', session_new_path %>
  </div>
</div>